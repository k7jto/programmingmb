<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="@dimen/number_button_text_size"
        android:gravity="right"
        android:textIsSelectable="true"
        android:textAlignment="viewEnd"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:clickable="false"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/txtDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/btn8"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/btn9"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="รท"
        android:id="@+id/btnDivide"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="clickOperand"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btn4"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_below="@+id/btn7"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btn5"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/btn6"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btnMultiply"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:onClick="clickOperand"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_below="@+id/btn4"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/btn2"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btn3"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btnAdd"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:onClick="clickOperand"/>

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClr"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_below="@+id/btn1"
        android:layout_toLeftOf="@+id/btn2"
        android:onClick="clearDisplay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnClr"
        android:layout_toRightOf="@+id/btnClr"
        android:layout_toEndOf="@+id/btnClr"
        android:onClick="appendNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnCalculate"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:enabled="false"
        android:onClick="clickCalculate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/btnSubtract"
        android:textAlignment="center"
        android:textSize="@dimen/number_button_text_size"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnCalculate"
        android:layout_toRightOf="@+id/btnCalculate"
        android:layout_toEndOf="@+id/btnCalculate"
        android:onClick="clickOperand"/>

</RelativeLayout>
